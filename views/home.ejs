<%- contentFor("title") %>
Home

<%- contentFor("content") %>

<% if(data){ %>
  <div class="row">
<% for(i=0;i<data.length;i++){ %>
  <div class="col-md-3">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <%= data[i].name %>
    </div>
    <a href="/product?id=<%= data[i]._id %>"><img src="<%= data[i].img %>" alt="Img - <%= data[i].name %>" width=100%; height="200" /></a>
    <div class="panel-body">
      <h1 style="font-size: 30px; margin: 5px auto;"><a href="/product?id=<%= data[i]._id %>"><%= data[i].name %></a></h1>
      <h2 style="font-size: 25px; margin: 5px auto;">Price : $ <%= data[i].price %></h2>
      <h2 style="font-size: 25px; margin: 5px auto;">
      <% if(data[i].stock > 0){ %>
        <b><span style="color:#0f0">In stock</span></b>
      <%}else{ %>
        <b><span style="color:#f00">Out of Stock</span></b>
        <% } %>
        </h2>
    </div>
  </div>
  </div>
<% }%></div><% } %>
