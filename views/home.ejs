<%- contentFor("title") %>
Home

<%- contentFor("content") %>

<% if(data){ %>
  <div class="row">
<% for(i=0;i<data.length;i++){ %>
  <div class="col-md-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <%= data[i].name %>
    </div>
    <img src="<%= data[i].img %>" alt="Img - <%= data[i].name %>" width=100%; height="250" />
    <div class="panel-body">
      <h1><a href="/product?id=<%= data[i]._id %>"><%= data[i].name %></a></h1>
      <h2>Price : $ <%= data[i].price %></h2>
      <h2>
      <% if(data[i].stock > 0){ %>
        <b><span style="color:#0f0">In stock</span></b>
      <%}else{ %>
        <b><span style="color:#f00">Out of Stock</span></b>
        <% } %>
        </h2>
      <p class="lead"><%= data[i].description %></p>
    </div>
  </div>
  </div>
<% }%></div><% } %>
